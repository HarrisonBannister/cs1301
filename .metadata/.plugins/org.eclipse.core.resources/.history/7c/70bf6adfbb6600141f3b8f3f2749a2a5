
public class MoneyCalc {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		// currency denomination values
		final double PENNY_VALUE = .01;
		final double NICKEL_VALUE = .05;
		final double DIME_VALUE = .1;
		final double QUARTER_VALUE = .25;
		final double ONE_VALUE = 1.00;
		final double FIVE_VALUE = 5.00;
		final double TEN_VALUE = 10.00;
		final double TWENTY_VALUE = 20.00;
		final double HUNDRED_VALUE = 100.00;
		
		double pennyQuantity = 0;
		double nickelQuantity = 41;
		double dimeQuantity = 84;
		double quarterQuantity = 128;
		double onesQuantity = 48;
		double fivesQuantity = 19;
		double tensQuantity = 4;
		double twentiesQuantity = 15;
		double hundredsQuantity = 0;
		
		double total = 0;
		total = (pennyQuantity * PENNY_VALUE) + 
				(nickelQuantity * NICKEL_VALUE) + 
				(dimeQuantity * DIME_VALUE) + 
				(quarterQuantity * QUARTER_VALUE) + 
				(onesQuantity * ONE_VALUE) + 
				(fivesQuantity * FIVE_VALUE) + 
				(tensQuantity * TEN_VALUE) + 
				(twentiesQuantity * TWENTY_VALUE) + 
				(hundredsQuantity * HUNDRED_VALUE);
		
		System.out.println("$"+total);

	}

}
